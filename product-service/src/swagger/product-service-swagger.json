{
  "swagger": "2.0",
  "info": {
    "description": "Product Service Swagger Documentation",
    "version": "1.0.0",
    "title": "Product Service Swagger Documentation"
  },
  "host": "7khi9mwaza.execute-api.eu-west-1.amazonaws.com",
  "basePath": "/dev",
  "schemes": [
    "https"
  ],
  "paths": {
    "/products": {
      "get": {
        "tags": [
          "Product Service"
        ],
        "summary": "List All Products",
        "description": "Returns Array of All Products",
        "operationId": "getProductsList",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful Operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Product"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": [
          "Product Service"
        ],
        "summary": "Find Product by Id",
        "description": "Returns a Single Product or Not Found Error",
        "operationId": "getProductById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of Product to Return",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Operation",
            "schema": {
              "$ref": "#/definitions/Product"
            }
          },
          "400": {
            "description": "Invalid Id Supplied (Bad Request)"
          },
          "404": {
            "description": "Product Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "required": [
        "name",
        "photoUrls"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "format": "float"
        },
        "count": {
          "type": "integer"
        },
        "src": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}